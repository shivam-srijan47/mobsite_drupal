<article{{attributes}}>
	{# <div{{content_attributes}}>
				{{ content }}
			</div> #}
	<div class="row">
		<div class="col-sm-6 d-flex justify-content-center align-items-center p-2 p-md-3">
			{{content.field_phone_image}}
		</div>
		<div class="col-sm-6">
			<div class="card-body d-flex justify-content-between align-items-center p-2 p-md-3">
				<h5 class="card-title m-0">{{content.field_phone_name.0}}</h5>
			</div>
			<ul type="none">
				<li class="taxonomy-term">
					<i class="bi bi-phone"></i>{{content.field_features.0}}
				</li>
				<li class="taxonomy-term">{{content.field_features.1}}</li>
				<li class="taxonomy-term">{{content.field_features.2}}</li>
				<li class="taxonomy-term">{{content.field_features.3}}</li>
			</ul>
		</div>
	</div>
</article>
