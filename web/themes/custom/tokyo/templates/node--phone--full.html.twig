<article{{attributes}} style="min-height:500px;" class="p-2 p-md-4">
<div class="display-3 p-3">{{content.field_phone_name.0}}</div>
	<div class="row justify-content-center">
		<div class="col-sm-5 d-flex justify-content-center align-items-center p-2 p-md-3">
			{{content.field_phone_image}}
		</div>
		<div class="col-sm-5">
			<div class="card-body d-flex justify-content-between align-items-center p-2 p-md-3">
				<h5 class="card-title m-0">{{content.field_phone_name.0}} - <small>{{content.field_phone_price.0}}</small></h5>
			</div>
			<ul type="none">
				<li class="taxonomy-term">
					<i class="bi bi-phone"></i>
					{{content.field_features.0}}
				</li>
				<li class="taxonomy-term">
					<i class="bi bi-cpu"></i>
					{{content.field_features.1}}
				</li>
				<li class="taxonomy-term">
					<i class="bi bi-memory"></i>
					{{content.field_features.2}}
				</li>
				<li class="taxonomy-term">
					<i class="bi bi-camera"></i>
					{{content.field_features.3}}
				</li>
			</ul>
			{# <div class="card-footer p-0"> #}
				<div class="w-50 phone_full">
					<div class="row text-center align-items-center">
						{% if node.field_phone_available.value %}
							<div class="card__btn card__btn__outline col-6">
								<a class="btn p-3 card__link" id="addtocart" href="#">Add to cart</a>
							</div>
							<div class="card__btn card__btn__cta col-6">
								<a class="btn p-3 card__link" id="buynow" href="#">Buy Now</a>
							</div>
						{% else %}
							<div class="card__btn card__btn__outline disabled col-6" tabindex="-1">
								<a class="btn p-3 card__link" id="addtocart" href="#" disabled>Add to cart</a>
							</div>
							<div class="card__btn card__btn__cta disabled col-6" tabindex="-1">
								<a class="btn p-3 card__link" id="buynow" href="#" disabled>Buy Now</a>
							</div>
						{% endif %}
					</div>
				</div>
			{# </div> #}
		</div>
	</div>
</article>
